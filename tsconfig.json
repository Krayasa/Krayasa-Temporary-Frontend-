{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
      "paths": {
        
      "@/*": ["./*"]
    }

  },
  "files": ["./graphql.d.ts"],
  // "include": ["src/**/*"],
  // "exclude": ["node_modules", "**/*.spec.ts"]
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/page.js", "app/(protected)/ApplicantView",
    // "utils/*.tsx",
    "graphql/**/*.gql",
  ],
  "exclude": [
    "node_modules"
  ]
}
